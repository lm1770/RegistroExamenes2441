<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_hospital"
                android:layout_marginLeft="150dp"
                android:layout_width="@dimen/imagenLogo"
                android:layout_height="@dimen/imagenLogo"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/marginTopBase"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="@string/Label1"
                android:gravity="center_horizontal"
                android:layout_weight="2"
                android:textSize="@dimen/TamanioLetra"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
                android:id="@+id/IdNombreTxt"
                android:layout_weight="1"
                android:textSize="@dimen/TamanioLetra"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            ></LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/marginTopBase"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="@string/Label2"
                android:gravity="center_horizontal"
                android:layout_weight="2"
                android:textSize="@dimen/TamanioLetra"
                android:layout_height="wrap_content">
            </TextView>

            <EditText
                android:id="@+id/IdPassTxt"
                android:layout_weight="1"
                android:textSize="@dimen/TamanioLetra"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            ></LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/marginTopBase"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:text="Agregar"
                android:id="@+id/agregarBtn"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textAllCaps="false"
                android:textSize="@dimen/TamanioBoton"
                android:layout_height="wrap_content">
            </Button>

            ></LinearLayout>

    </LinearLayout>

</LinearLayout>